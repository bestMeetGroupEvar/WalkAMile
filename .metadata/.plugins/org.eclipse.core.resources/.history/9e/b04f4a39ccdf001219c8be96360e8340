					if (rm.getLoadedRoutes().get(i).getName().equals(value)) {
						rm.setCurrentRoute(rm.getLoadedRoutes().get(i));
						Intent a = new Intent(mContext,OnRoute.class);
						a.addFlags(Intent.FLAG_ACTIVITY_CLEAR_TOP);
						startActivity(a);
						break;
					}
				}
			}
